.container

  .row.header-row

    .col-sm-6

      %h1= t('engagement.overview_title')

    .col-sm-6

      = link_to t('common.toggle_help'), '#', class: 'btn btn-default toggle-help'

  .row

    .col-sm-12

      .well

        %h1= t('engagement.help_main')
        = t('engagement.help_main_html')

      %h2= t 'engagement.table_title_collaborations'

      - unless @collaborations.any?

        %p= t 'engagement.table_collaborations_is_empty'

      - else

        = render 'table', collection: @collaborations

      %hr

      %h2= t 'engagement.table_title_requirements'

      - unless @requirements.any?

        %p= t 'engagement.table_requirements_is_empty'

      - else

        = render 'table', collection: @requirements

