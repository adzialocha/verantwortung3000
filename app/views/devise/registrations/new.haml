.container

  .page

    %h1= t('auth.signup_title')

    = simple_form_for resource, as: resource_name, url: registration_path(resource_name) do |f|

      = f.error_notification

      .form-inputs

        %h2= t('auth.signup_title_name')

        %br

        = t('auth.signup_description_html')

        %hr

        = f.input :first_name, autofocus: true, required: true
        = f.input :last_name, required: true

        %h2= t('auth.signup_contact')

        = f.input :email, required: true, hint: t('auth.signup_hint_email')
        = f.input :tel, required: true, hint: t('auth.signup_hint_mobile')

        %h2= t('auth.signup_address')

        = f.input :street
        = f.input :city_code
        = f.input :city
        = f.input :country

        %h2= t('auth.signup_password')

        = f.input :password, required: true
        = f.input :password_confirmation, required: true

        %hr

        %h2= t('auth.signup_additional_info')

        %br

        = f.input :camping_preferred, label: t('auth.signup_camping_preferred')

        %hr

        %h2= t('auth.signup_terms_of_service')

        %br

        = t('auth.signup_terms_of_service_html')

        %br

        = f.input :tos_accepted, label: t('auth.signup_terms_of_service_agree'), required: true

        %hr

      .form-actions

        .pull-right
          = f.button :submit, t('auth.submit_signup'), class: "btn btn-success"

    = render "devise/shared/links"
