.container

  .row.header-row

    .col-sm-9

      %h1= collection.model_name.human.pluralize

    .col-sm-3

      - if can? :create, collection
        = link_to 'Create new', new_resource_path, class: 'btn btn-default'

  .row

    .col-sm-12

      %table(class="table")

        - collection.each do |resource|

          %tr

            %td= resource.title

            %td
              - if can? :read, resource
                = link_to 'Show', resource_path(resource)
              - if can? :update, resource
                = link_to 'Edit', edit_resource_url(resource)


